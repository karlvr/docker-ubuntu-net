#!/bin/sh

mkdir -p /tmp/lb-pgfouine
pgfouine -file /var/log/postgresql/postgresql-9.?-main.log -logtype stderr -top 40 \
-report /tmp/lb-pgfouine/index.html=overall,bytype,slowest,n-mosttime,n-mostfrequent,n-slowestaverage,\
hourly,n-mostfrequenterrors \
-format html-with-graphs -durationunit ms \
-onlyselect
rsync -a /tmp/lb-pgfouine/* st1.srv.letterboxd.com:/srv/www/letterboxd/stats/`hostname`
